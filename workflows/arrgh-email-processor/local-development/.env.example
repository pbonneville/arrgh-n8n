# Email Domain Configuration
# Replace with your actual domain configured for email processing
EMAIL_DOMAIN=your-domain.com
EMAIL_SUBDOMAIN=your-subdomain

# Full email domain (will be: your-subdomain.your-domain.com)
FULL_EMAIL_DOMAIN=${EMAIL_SUBDOMAIN}.${EMAIL_DOMAIN}

# Test email addresses (replace with your actual test addresses)
TEST_EMAIL_SENDER=test-sender@example.com
TEST_EMAIL_INVOICE=invoices@${FULL_EMAIL_DOMAIN}
TEST_EMAIL_SUPPORT=support@${FULL_EMAIL_DOMAIN}
TEST_EMAIL_SALES=sales@${FULL_EMAIL_DOMAIN}
TEST_EMAIL_GENERAL=info@${FULL_EMAIL_DOMAIN}

# AI Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# n8n Configuration
N8N_API_KEY=your_n8n_api_key
N8N_BASE_URL=https://your-n8n-instance.com

# AWS Configuration (for testing S3 integration)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
AWS_S3_BUCKET=your-email-storage-bucket

# Development Settings
DEBUG=true
LOG_LEVEL=DEBUG

# Webhook Configuration
WEBHOOK_PATH=inbound-email
WEBHOOK_TEST_URL=https://your-n8n-instance.com/webhook-test/${WEBHOOK_PATH}
WEBHOOK_PROD_URL=https://your-n8n-instance.com/webhook/${WEBHOOK_PATH}

# SNS Configuration (for testing)
SNS_TOPIC_ARN=arn:aws:sns:region:account:your-email-notifications-topic