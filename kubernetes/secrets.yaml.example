apiVersion: v1
kind: Secret
metadata:
  name: n8n-secrets
  namespace: n8n
type: Opaque
stringData:
  # Basic auth credentials
  N8N_BASIC_AUTH_PASSWORD: "CHANGE_ME_TO_SECURE_PASSWORD"
  N8N_ENCRYPTION_KEY: "CHANGE_ME_TO_RANDOM_STRING"
  
  # Google Cloud SQL database credentials
  DB_POSTGRESDB_PASSWORD: "YOUR_DATABASE_PASSWORD"
  
  # Google OAuth credentials (optional)
  GOOGLE_OAUTH_CLIENT_ID: "YOUR_OAUTH_CLIENT_ID"
  GOOGLE_OAUTH_CLIENT_SECRET: "YOUR_OAUTH_CLIENT_SECRET"
  
  # AWS SES SMTP credentials
  N8N_SMTP_USER: "YOUR_SES_SMTP_USERNAME"
  N8N_SMTP_PASS: "YOUR_SES_SMTP_PASSWORD"